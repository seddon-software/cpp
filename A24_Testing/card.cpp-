Card::Card(int rank): rank(rank)   // rank=0 (2C), rank=1 (3C), rank = 13 (2D)
{
    const char pips[] = "23456789TJQKA";
    if(rank/13 == 0) this->suit = 'c';
    if(rank/13 == 1) this->suit = 'd';
    if(rank/13 == 2) this->suit = 'h';
    if(rank/13 == 3) this->suit = 's';
    pip = pips[rank % 13];
    played = false;
}

string Card::id()
{
    stringstream id;
    id << pip << ", " << suit << ", " << boolalpha << played;
    return id.str();
}
