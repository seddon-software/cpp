all: subsystems

descend = @echo "\n\n$(1)\n"; cd ../$(1) && pwd && $(MAKE)
clobber = @echo "\n\n$(1)\n"; cd ../$(1) && $(MAKE) clean
descend2 = @echo "\n\n$(1)\n"; cd ../Advanced/$(1) && $(MAKE)
clobber2 = @echo "\n\n$(1)\n"; cd ../Advanced/$(1) && $(MAKE) clean

subsystems:
	$(call descend,01_GettingStarted)
	$(call descend,02_Namespaces)
	$(call descend,03_Revision)
	$(call descend,04_FilesIO)
	$(call descend,05_C_Extensions)
	$(call descend,06_Classes)
	$(call descend,07_OperatorOverloading)
	$(call descend,08_ShallowDeepCopying)
	$(call descend,09_StandardTemplateLibrary)
	$(call descend,10_InheritancePolymorphism)
	$(call descend2,01_TypeCasting)
	$(call descend2,02_ConstCorrect)
	$(call descend2,03_ExceptionHandling)
	$(call descend2,04_TemplateFunctions)
	$(call descend2,05_TemplateClasses)
	$(call descend2,06_AdvancedTemplates)
	$(call descend2,07_StandardTemplateLibrary)
	$(call descend2,08_Lambdas)
	$(call descend2,09_NewFeatures)
	$(call descend2,10_BindAndFunction)
	$(call descend2,11_MemoryManagement)
	$(call descend2,12_RValueReferencesAndMove)
	$(call descend2,13_CommonPatterns)
	$(call descend2,14_Threads)
	$(call descend2,15_RegEx)
	$(call descend2,16_MultipleInheritance)
	$(call descend2,17_SmartPointers)
	$(call descend2,18_HandleBody)
	$(call descend2,19_ObjectOrientedCallbacks)
	$(call descend2,20_Singleton)
	$(call descend2,21_Miscellaneous)

clean:
	$(call clobber,01_GettingStarted)
	$(call clobber,02_Namespaces)
	$(call clobber,03_Revision)
	$(call clobber,04_FilesIO)
	$(call clobber,05_C_Extensions)
	$(call clobber,06_Classes)
	$(call clobber,07_OperatorOverloading)
	$(call clobber,08_ShallowDeepCopying)
	$(call clobber,09_StandardTemplateLibrary)
	$(call clobber,10_InheritancePolymorphism)
	$(call clobber2,01_TypeCasting)
	$(call clobber2,02_ConstCorrect)
	$(call clobber2,03_ExceptionHandling)
	$(call clobber2,04_TemplateFunctions)
	$(call clobber2,05_TemplateClasses)
	$(call clobber2,06_AdvancedTemplates)
	$(call clobber2,07_StandardTemplateLibrary)
	$(call clobber2,08_Lambdas)
	$(call clobber2,09_NewFeatures)
	$(call clobber2,10_BindAndFunction)
	$(call clobber2,11_MemoryManagement)
	$(call clobber2,12_RValueReferencesAndMove)
	$(call clobber2,13_CommonPatterns)
	$(call clobber2,14_Threads)
	$(call clobber2,15_RegEx)
	$(call clobber2,16_MultipleInheritance)
	$(call clobber2,17_SmartPointers)
	$(call clobber2,18_HandleBody)
	$(call clobber2,19_ObjectOrientedCallbacks)
	$(call clobber2,20_Singleton)
	$(call clobber2,21_Miscellaneous)
