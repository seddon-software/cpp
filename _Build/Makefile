all: subsystems

descend = @echo "\n\n$(1)\n"; cd ../$(1) && $(MAKE)
clobber = @echo "\n\n$(1)\n"; cd ../$(1) && $(MAKE) clean

subsystems:
	$(call descend,01_GettingStarted)
	$(call descend,02_Functions)
	$(call descend,03_Classes)
	$(call descend,04_STL)
	$(call descend,05_UsingTheHeap)
	$(call descend,06_OperatorOverloading)
	$(call descend,07_CopyingAndAssignment)
	$(call descend,08_Inheritance)
	$(call descend,09_Namespaces)
	$(call descend,10_TypeCasting)
	$(call descend,11_ConstCorrect)
	$(call descend,12_ExceptionHandling)
	$(call descend,13_TemplateFunctions)
	$(call descend,14_TemplateClasses)
	$(call descend,15_AdvancedTemplates)
	$(call descend,16_StandardTemplateLibrary)
	$(call descend,17_Lambdas)
	$(call descend,18_NewFeatures)
	$(call descend,19_BindAndFunction)
	$(call descend,20_MemoryManagement)
	$(call descend,21_RValueReferencesAndMove)
	$(call descend,22_CommonPatterns)
	$(call descend,23_Threads)
	$(call descend,24_RegEx)
	$(call descend,25_MultipleInheritance)
	$(call descend,26_SmartPointers)
	$(call descend,27_HandleBody)
	$(call descend,28_ObjectOrientedCallbacks)
	$(call descend,29_Singleton)
	$(call descend,30_Miscellaneous)

clean:
	$(call clobber,01_GettingStarted)
	$(call clobber,02_Functions)
	$(call clobber,03_Classes)
	$(call clobber,04_STL)
	$(call clobber,05_UsingTheHeap)
	$(call clobber,06_OperatorOverloading)
	$(call clobber,07_CopyingAndAssignment)
	$(call clobber,08_Inheritance)
	$(call clobber,09_Namespaces)
	$(call clobber,10_TypeCasting)
	$(call clobber,11_ConstCorrect)
	$(call clobber,12_ExceptionHandling)
	$(call clobber,13_TemplateFunctions)
	$(call clobber,14_TemplateClasses)
	$(call clobber,15_AdvancedTemplates)
	$(call clobber,16_StandardTemplateLibrary)
	$(call clobber,17_Lambdas)
	$(call clobber,18_NewFeatures)
	$(call clobber,19_BindAndFunction)
	$(call clobber,20_MemoryManagement)
	$(call clobber,21_RValueReferencesAndMove)
	$(call clobber,22_CommonPatterns)
	$(call clobber,23_Threads)
	$(call clobber,24_RegEx)
	$(call clobber,25_MultipleInheritance)
	$(call clobber,26_SmartPointers)
	$(call clobber,27_HandleBody)
	$(call clobber,28_ObjectOrientedCallbacks)
	$(call clobber,29_Singleton)
	$(call clobber,30_Miscellaneous)

